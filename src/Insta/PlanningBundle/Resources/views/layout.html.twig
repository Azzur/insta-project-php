{% extends '::base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Project name</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#contact">Contact</a></li>
                    {% block additionals_nav_left %}{% endblock %}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% block additionals_nav_right %}{% endblock %}
                </ul>
                {% block additionals_nav_text_right %}{% endblock %}
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">

        {% block content %}{% endblock %}

    </div>

{% endblock %}

{% block stylesheets %}
    <style>
        body {
            padding-top: 60px;
        }
    </style>
{% stylesheets
    '@PlanningBundle/Resources/bootstrap/css/bootstrap.min.css'
    '@PlanningBundle/Resources/bootstrap/united.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
{% javascripts
    '@PlanningBundle/Resources/js/jquery-2.1.1.min.js'
    '@PlanningBundle/Resources/bootstrap/js/bootstrap.min.js' output="js/compiled/main.js" %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}