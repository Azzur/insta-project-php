{% extends '::base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('planning_homepage') }}">
                    <img height="20" style="display: inline-block" src="http://www.insta.fr/sites/all/themes/insta_theme/images/insta-footer.png" alt="Brand"> Gestion de planning
                </a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    {% if app.user is not null %}
                        <li><a href="{{ path('planning_month', {
                            month: "now"|date('m'),
                            year: "now"|date('Y')
                            }) }}">
                            {% if is_granted("ROLE_STUDENT") %}
                                Mon planning ({{ app.user.promotion.name }})
                            {% elseif is_granted("ROLE_TUTOR") %}
                                Planning de l'étudiant
                            {% elseif is_granted("ROLE_TEACHER") %}
                                Planning de mes cours ()
                            {% elseif is_granted("ROLE_ADMIN") %}
                                Planning général
                            {% endif %}
                        </a></li>
                        {% if is_granted("ROLE_ADMIN") %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Administration <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="{{ path('index_location') }}">Emplacements</a></li>
                                    <li><a href="{{ path('user_group_overview') }}">Utilisateurs & Groupes</a></li>
                                    <li><a href="{{ path('student_promo_list') }}">Etudiants & Promotions</a></li>
                                    <li role="presentation" class="divider"></li>
                                    <li><a href="{{ path('manage_holidays') }}">Jours fériés</a></li>
                                </ul>
                            </li>

                        {% endif %}
                    {% endif %}
                    {% block additionals_nav_left %}{% endblock %}
                </ul>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a class="navbar-right btn btn-info navbar-btn" href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                {% else %}
                    <a class="navbar-right btn btn-info navbar-btn" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                {% endif %}
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <p class="visible-lg navbar-text navbar-right">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} </p>
                {% endif %}
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    {% block jumbotron %}{% endblock %}

    <div class="container" style="margin-top: 10px">

        {% block content %}{% endblock %}

    </div>

{% endblock %}

{% block stylesheets %}
    <style>
        body {
            padding-top: 50px;
        }
    </style>
{% stylesheets
    '@PlanningBundle/Resources/bootstrap/css/bootstrap.min.css'
    '@PlanningBundle/Resources/bootstrap/united.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
{% javascripts
    '@PlanningBundle/Resources/js/jquery-2.1.1.min.js'
    '@PlanningBundle/Resources/bootstrap/js/bootstrap.min.js' output="js/compiled/main.js" %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}